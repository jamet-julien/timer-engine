{
    "name": "timer-engine",
    "version": "0.0.0-semantical-release",
    "description": "Loop engine to run game with update and draw function",
    "main": "dist/index.js",
    "scripts": {
        "commit": "git-cz",
        "report-coverage": "cat ./coverage/lcov.info | codecov",
        "test": "jest",
        "test:watch": "jest --watch",
        "prebuild": "rimraf dist",
        "build": "babel --copy-files --out-dir dist --ignore *.test.js  src",
        "semantic-release": "semantic-release"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jamet-julien/timer-engine.git"
    },
    "keywords": [
        "game",
        "loop",
        "requestAnimationFrame",
        "timer"
    ],
    "files": [
        "dist",
        "README.md"
    ],
    "author": "Julien Jamet <jamet.julien@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jamet-julien/timer-engine/issues"
    },
    "homepage": "https://github.com/jamet-julien/timer-engine#readme",
    "devDependencies": {
        "@babel/cli": "7.7.4",
        "@babel/core": "7.7.4",
        "@babel/preset-env": "7.7.4",
        "babel-jest": "24.9.0",
        "codecov": "3.6.1",
        "commitizen": "4.0.3",
        "cz-conventional-changelog": "3.0.2",
        "ghooks": "2.0.4",
        "jest": "24.9.0",
        "rimraf": "3.0.0",
        "semantic-release": "15.13.31"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        },
        "ghooks": {
            "pre-commit": "npm run test"
        }
    },
    "jest": {
        "verbose": true,
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/*.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 75,
                "lines": 95
            }
        }
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ]
    },
    "dependencies": {}
}
